@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<!doctype html>
<hr class="my-4">
<div class="container">
    <h2>Список ролей</h2>
    <table class="table">
        @foreach (var role in Model)
        {
            @if (role.Name != "")
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
    <a asp-action="Create">Add Roles</a>
    <a asp-action="UserList">User List</a>
    <a asp-action="">Blog List</a>
</div>