@using Microsoft.AspNetCore.Identity
@model IEnumerable<_2Blogs.Models.ApplicationUser>

@{
    ViewData["Title"] = "UserList";
}

<!doctype html>
<hr class="my-4">
<div class="container">
    <h2>UserList</h2>
    <a class="btn btn-success" asp-controller="Users" asp-action="Create" aria-label="Left Align">Add</a>
    <table class="table">
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <form asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Roles</a>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>