
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions
@{
    Layout = null;
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var cultureItems = LocOptions.Value.SupportedUICultures
        .Select(c => new SelectListItem { Value = c.Name, Text = c.DisplayName })
        .ToList();
}
<!doctype html>
<html lang="en">
<head>
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</head>

<body>
    <hr class="my-4">
    <header class="blog-header py-3">
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a class="navbar-brand" href="">Original Site Name</a>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">@Localizer["Home"] <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="BlogList">@Localizer["ListBlog"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="CreateBlog">@Localizer["CreateBlog"]</a>
                    </li>
                    <li class="nav-item">
                        @if (ViewContext.HttpContext.User.IsInRole("admin"))
                        {
                            <a class="nav-link" asp-controller="Roles" asp-action="Index">@Localizer["Admin"]</a>
                        }

                    </li>
                </ul>

                @await Html.PartialAsync("_LoginPartial")
            </div>
        </nav>
    </header>
    <div class="container bg-dark">
        <hr class="my-4">
        <div class="jumbotron  p-md-5 text-white rounded bg-dark p-2">
            <div class="col-md-6 px-0">
                <h1 class="display-4 font-italic">@Localizer["Welcome"]</h1>
                <p class="lead my-3">@Localizer["Description"]</p>
                <p class="lead mb-0"><a asp-controller="Home" asp-action="CreateBlog" class="text-white font-weight-bold">@Localizer["CreateBlog"]</a></p>
            </div>
        </div>
        <div>
            <hr class="my-4">
            <div class="container">
                <h2 class="text-center text-white">@Localizer["Chat"]</h2>
                <div class="text-white" id="chatroom"></div>
                <textarea id="message" style="width:1000px "></textarea>
                <button class="btn btn-default" id="sendBtn">@Localizer["Send"]</button>
            </div>
        </div>
        <script src="js/signalr.min.js"></script>
        <script>
            const hubConnection = new signalR.HubConnectionBuilder()
                .withUrl("/chat")
                .configureLogging(signalR.LogLevel.Information)
                .build();

            hubConnection.on("Send", function (message, userName) {
                let userNameElem = document.createElement("b");
                userNameElem.appendChild(document.createTextNode(userName + ': '));
                let elem = document.createElement("p");
                elem.appendChild(userNameElem);
                elem.appendChild(document.createTextNode(message));

                var firstElem = document.getElementById("chatroom").firstChild;
                document.getElementById("chatroom").insertBefore(elem, firstElem);

            });
            document.getElementById("sendBtn").addEventListener("click", function (e) {
                let message = document.getElementById("message").value;
                hubConnection.invoke("Send", message);
            });

            hubConnection.start();
        </script>
    </div>

    <hr class="my-4">
    <footer class="container">

        <p class="float-right"><a href="#">Back to top</a></p>
        <p>© 2018 Created by Maxim Spaseonav </p>
        <form asp-controller="Language" asp-action="SetLanguage" style="margin-top:20px;"
              asp-route-returnUrl="@Context.Request.Path"
              method="post" class="form-horizontal">
            @Localizer["Language:"] <select name="culture" onchange="this.form.submit();"
                                            asp-for="@requestCulture.RequestCulture.UICulture.Name"
                                            asp-items="cultureItems"></select>
        </form>
    </footer>
</body>

</html>
